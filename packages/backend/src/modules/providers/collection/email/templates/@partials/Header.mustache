<table width="100%" max-width="580" cellpadding="0" cellspacing="0" border="0" align="center" valign="middle" style="vertical-align:middle">
    <tbody>
        <tr>
            <td valign="middle" style="vertical-align:middle; padding: 20px; border-bottom: 1px solid #bbbbbb;">
                <table cellpadding="0" cellspacing="0" border="0" align="left" valign="middle" style="vertical-align:middle; line-height: 28px">
                    <tbody>
                        <tr>
                            <td width="36" height="28" valign="middle" style="vertical-align:middle; line-height: 28px;">
                                <a href={{{dashboard_url}}}
                                    style="color: #333333; font-family: Arial, sans-serif; font-size: 14px; line-height: 28px; vertical-align:middle; -webkit-text-size-adjust:none; text-decoration: none; display:inline-block;"
                                    target="_blank" valign="middle">
                                    <img src={{{logo_url}}} border="0" width="28" height="28" valign="middle"
                                        style="vertical-align:middle; display:inline-block;"/>
                                </a>
                            </td>
                            <td height="28" valign="middle" style="vertical-align:middle; line-height: 28px;">
                                <a href={{{dashboard_url}}}
                                    style="color: {{accent}}; font-family: 'Montserrat', sans-serif; font-size: 15px; font-weight: 600; line-height: 28px; -webkit-text-size-adjust:none; text-decoration: none; display:inline-block;"
                                    target="_blank">
                                    {{project_name}}
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table cellpadding="0" cellspacing="0" border="0" align="right" valign="middle" style="vertical-align:middle; line-height: 28px">
                    <tbody>
                        <tr>
                            <td align="right" height="28" valign="middle" style="vertical-align:middle; line-height: 28px;">
                                <a style="margin:0; padding:0; color: {{accent}}; text-decoration:none;"
                                    href={{{dashboard_url}}}>{{link_name}}
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>