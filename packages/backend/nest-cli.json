{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.mustache",
        "watchAssets": true
      },
      {
        "include": "**/*.node",
        "watchAssets": true
      },
      {
        "include": "../i18n/**/*",
        "outDir": "dist/i18n",
        "watchAssets": true
      },
      {
        "include": "../views/**/*",
        "outDir": "dist/views",
        "watchAssets": true
      },
      {
        "include": "../public/**/*",
        "outDir": "dist/public",
        "watchAssets": true
      }
    ]
  }
}